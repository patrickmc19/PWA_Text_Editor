{
    "name": "JATE",
    "version": "1.0.0",
    "description": "JATE is a full stack application that allows users to create and share their own recipes.",
    "main": "server.js",
    "scripts": {
      "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
      "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
      "server": "nodemon server.js",
      "build": "cd client && npm run build",
      "install": "cd client && npm install",
      "client": "cd client && npm start"
    },
    "keywords": [
        "react",
        "express",
        "node",
        "mongodb"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
      "express": "^4.17.1",
      "if-env": "^1.0.4"
    },
    "devDependencies": {
      "concurrently": "^5.2.0",
      "nodemon": "^2.0.4"
    }
  }